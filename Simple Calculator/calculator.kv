<MyLayout>
    # FOR BACKGROUND COLOR OF LAYOUT
    canvas.before:
        Color:
            rgba: (255/255, 255/255, 255/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    # size: root.width, root.height
    
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        # FOR BACKGROUND COLOR OF LAYOUT
        canvas.before:
            Color:
                rgba: (255/255, 255/255, 255/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 0.6)
            # FOR BACKGROUND COLOR OF LAYOUT
            canvas.before:
                Color:
                    rgba: (255/255, 255/255, 255/255, 0.82)
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                id: previous_operand
                multiline: False
                readonly: "False"
                foreground_color: "#808080"
                background_normal: ""
                background_color: "#ffffff"
                font_size: 24
                halign: "right"
                padding_y: [self.height / 1.1 - (self.line_height / 1.1) * len(self._lines), 0]

            TextInput:
                id: current_operand
                multiline: False
                readonly: "False"
                background_normal: ""
                background_color: "#ffffff"
                font_size: 34
                halign: "right"
                size_hint: (1, 0.5)
                padding_y: [self.height / 1.5 - (self.line_height / 1.5) * len(self._lines), 0]

        GridLayout:
            rows: 5
            cols: 4
            spacing: 2.5
            padding: 3.5
            Button:
                id: clear
                on_press: root.clear()
                size_hint: (.2, .2)
                font_size: 25
                text: "C"
                background_normal: ""
                background_color: "#40E0D0"

            Button:
                id: delete
                on_press: root.delete()
                size_hint: (.2, .2)
                font_size: 25
                text: "Del"
                background_normal: ""
                background_color: "#40E0D0"

            Button:
                id: square
                on_press: root.square()
                size_hint: (.2, .2)
                font_size: 25
                text: "x2"
                background_normal: ""
                background_color: "#40E0D0"

            Button:
                id: divide
                on_press: root.divide()
                size_hint: (.2, .2)
                font_size: 25
                text: "รท"
                background_normal: ""
                background_color: "#40E0D0"

            Button:
                id: seven
                on_press: root.seven()
                size_hint: (.2, .2)
                font_size: 25
                text: "7"
                background_normal: ""
                background_color: "#87CEEB"

            Button:
                id: eight
